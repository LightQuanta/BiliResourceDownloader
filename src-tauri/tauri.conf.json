{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "biliresourcedownloader",
  "version": "0.9.0",
  "identifier": "tech.lq0.biliresourcedownloader",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "BiliResourceDownloader",
        "width": 1200,
        "height": 800,
        "minWidth": 600,
        "minHeight": 500,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
